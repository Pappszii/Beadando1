<Window x:Class="PixelShip.WindowSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelShip"
        mc:Ignorable="d"
        Title="WindowSettings" Height="600" Width="950" Closing="Window_Closing" >
    <Window.Background>
        <ImageBrush ImageSource="hatter.png"/>
    </Window.Background>
    <Grid>
        <Button Margin="130,100,550,150" Click="Button_Click_1" >
            <Button.Background>
                <ImageBrush ImageSource="xwing.png"/>
            </Button.Background>
        </Button>
        <Button Margin="530,100,150,150" Click="Button_Click"  >
            <Button.Background>
                <ImageBrush ImageSource="falcon.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
